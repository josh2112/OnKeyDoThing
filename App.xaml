<Application x:Class="Com.Josh2112.OnKeyDoThing.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:mdix="http://materialdesigninxaml.net/winfx/xaml/themes"
             ShutdownMode="OnExplicitShutdown">

    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <mdix:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ContextMenu x:Key="taskbarIconContextMenu" Background="{DynamicResource MaterialDesignPaper}">
                <MenuItem Header="Configuration..." Command="{Binding ShowWindowCommand}"/>
                <Separator />
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
            </ContextMenu>

            <tb:TaskbarIcon x:Key="taskbarIcon" IconSource="/trayicon.ico"
                        ContextMenu="{StaticResource taskbarIconContextMenu}"
                        DoubleClickCommand="{Binding ShowWindowCommand}"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
